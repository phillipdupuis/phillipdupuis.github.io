---
const COLORS = {
  dark: "bg-gray-100 text-gray-800 border-gray-500 dark:bg-gray-700 dark:text-gray-400",
  blue: "bg-blue-100 text-blue-800 border-blue-400 dark:bg-gray-700 dark:text-blue-400",
  red: "bg-red-100 text-red-800 border-red-400 dark:bg-gray-700 dark:text-red-400",
  green:
    "bg-green-100 text-green-800 border-green-400 dark:bg-gray-700 dark:text-green-400",
  yellow:
    "bg-yellow-100 text-yellow-800 border-yellow-300 dark:bg-gray-700 dark:text-yellow-300",
  indigo:
    "bg-indigo-100 text-indigo-800 border-indigo-400 dark:bg-gray-700 dark:text-indigo-400",
  purple:
    "bg-purple-100 text-purple-800 border-purple-400 dark:bg-gray-700 dark:text-purple-400",
  pink: "bg-pink-100 text-pink-800 border-pink-400 dark:bg-gray-700 dark:text-pink-400",
} as const;

export type Color = keyof typeof COLORS;

export interface Props {
  color?: Color;
  classNames?: string;
}

const { color = "dark", classNames = "" } = Astro.props;
---

<span
  class:list={[
    "text-xs font-medium px-2.5 py-0.5 flex flex-row items-center gap-1 rounded border",
    COLORS[color],
    classNames,
  ]}
>
  <slot />
</span>
